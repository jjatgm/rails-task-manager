<h1>Tasks</h1>
<ul>
  <% @tasks.each do |task|%>
    <li>
      <%= link_to task.title, task_path(task.id) %>
      <%= link_to "Delete", task_path(task.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      <%= link_to "Edit", edit_task_path(task.id), method: :edit %>
    </li>
  <% end %>
</ul>
